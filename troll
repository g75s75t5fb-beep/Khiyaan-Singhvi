<script>
const jokes = [
    "Why don't skeletons fight each other? They don't have the guts.",
    "I only know 25 letters of the alphabet. I don't know Y.",
    "Why did the scarecrow win an award? Because he was outstanding in his field.",
    "Why can't your nose be 12 inches long? Because then it would be a foot.",
    "I'm reading a book about anti-gravity. It's impossible to put down."
];

let jokeCount = 0;
let musicStarted = false;

function newJoke() {

    if (!musicStarted) {
        document.getElementById("bgMusic").play();
        musicStarted = true;
    }

    if (jokeCount < jokes.length) {
        document.getElementById("joke").innerText = jokes[jokeCount];
        jokeCount++;
    } else {
        unleashChaos();
    }
}

function unleashChaos() {
    document.getElementById("joke").style.display = "none";
    document.querySelector("button").style.display = "none";
    document.getElementById("troll").style.display = "block";

    document.body.classList.add("shakeScreen");
    document.getElementById("trollSound").play();

    // Create floating chaotic emojis
    for (let i = 0; i < 20; i++) {
        let chaos = document.createElement("div");
        chaos.className = "chaos";
        chaos.innerText = "ðŸ¤£ðŸ”¥ðŸ’€ðŸŽ‰";
        chaos.style.left = Math.random() * 100 + "vw";
        chaos.style.animationDuration = (Math.random() * 3 + 2) + "s";
        document.body.appendChild(chaos);
    }
}
</script>

